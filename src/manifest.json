{
  "manifest_version": 3,
  "name": "Conventional Comments Helper",
  "version": "1.0",
  "description": "Adds Conventional Comment prefixes to comment boxes",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["src/content.ts"],
      "css": ["src/assets/styles.css"]
    }
  ]
}
